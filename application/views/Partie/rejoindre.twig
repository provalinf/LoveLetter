{% extends "layout.twig" %}
{% block contenu %}

	<div class="container contain-background">
		<div class="row justify-content-md-center">
			<div class="col">
				<h1>Rejoindre une partie</h1>
			</div>
		</div>
		<div class="row justify-content-md-center">
			<div class="col">
				<table class="table table-striped table-dark">
					<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nom partie</th>
						<th scope="col">Date cr√©ation</th>
						<th scope="col">Nb de joueurs</th>
						<th scope="col"></th>
					</tr>
					</thead>
					<tbody>
					{% for partie in liste_parties %}
						<tr>
							<td>{{ partie.id_partie }}</td>
							<td>{{ partie.nom_partie }}</td>
							<td>{{ partie.date_creation }}</td>
							<td style="padding-left: 55px;">{{ partie.nb_joueurs }}</td>
							<td>{{ anchor("Game_c/rejoindre/"~partie.id_partie, 'Rejoindre', {'class':'btn btn-success btn-sm'}) }}</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>

		</div>

	</div>

{% endblock %}